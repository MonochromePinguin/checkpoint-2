{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">{{ beast.Name }} </h1>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="/beasts/{{ beast.Id }}/edit" class="float-right">Edit</a>
        </div>
    </div>
    <div class="row detail">
        <figure class="col-12 col-md-4">
            <img src="{{ beast.Picture }}" class="img-fluid"/>
        </figure>
        <div class="col-12 col-md-8">
            <p>Area : {{ beast.Area }}</p>
            <p>Size : {{ beast.Size }}</p>
            <p>Planet : {{ beast.PlanetName }}</p>
            <p>Movie(s) : {{ beast.MovieTitle }}</p>
        </div>
    </div>
    <a href="/beasts">Back</a>
{% endblock %}
